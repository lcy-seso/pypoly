# Run manually to reformat a file:
# clang-format -i --style=file <file>
BasedOnStyle: Google
DerivePointerAlignment: false
SortIncludes: true
IncludeBlocks: Regroup
IncludeCategories:
  - Regex:           '<([A-Za-z0-9\Q/-_\E])+>'
    Priority:        4
  - Regex:           '<(catch2|boost)\/'
    Priority:        3
  - Regex:           '<([A-Za-z0-9.\Q/-_\E])+>'
    Priority:        2
  - Regex:           '"([A-Za-z0-9.\Q/-_\E])+"'
    Priority:        1
